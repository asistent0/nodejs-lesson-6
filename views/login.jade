body
    div.container
        form(action="/login", method="post").form-inline
            div.form-group
                label(for="exampleInputName2") Логин
                input.form-control(type="text", id="exampleInputName2", name="username")
            div.form-group
                label(for="exampleInputEmail2") Пароль
                input.form-control(type="password", id="exampleInputEmail2", name="password")
            button.btn.btn-primary(type="submit") Отправить
    script(src="/jquery/dist/jquery.min.js")
    script(src="/bootstrap/dist/js/bootstrap.min.js")